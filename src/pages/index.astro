---
import Hero from '@components/home/hero.astro';
import Layout from '../layouts/main-layout.astro'
import Title from '@components/primitives/title.astro'
import HomeSection from '@components/home/home-section.astro'
// import SenalesSection from '@components/senales-section'
---

<Layout title="Inicio" description="Description inicio">
  <Hero />
        <HomeSection 
          title='Señales Viales'
          subtitle='Señales para carretera, zona urbana o rural con  soporte fibra de vidrio o compuesto de aluminio y lamina Reflectiva GI, HIP ó DG3.'
          titleColor='yellow'
          img1='/assets/images/reguladoras-hip.webp'
          img2= '/assets/images/preventivas-hip.webp'
          img3='/assets/images/informativas-hip.webp'
          href='/senales/viales/info'
          />
        <HomeSection 
          title='Obras y Construccion'
          subtitle='Señales para vía pública  en construcción con soporte triplay, mdf, sustrato de aluminio.'
          titleColor='warning'
          img1='/assets/images/obras_tijeral.webp'
          img2= '/assets/images/obras_pre.webp'
          img3='/assets/images/obras_tran.webp'
          href='/senales/obras/'
          reverse
          />
        <HomeSection 
          title='Fotoluminiscentes'
          subtitle='Señales de seguridad en caso de incendio o desastre natural requeridas por INDECI.'
          titleColor='green'
          img1='/assets/images/foto-oscuridad-logo.webp'
          img2= '/assets/images/foto-varios-oscuridad.webp'
          img3='/assets/images/foto-dia.webp'
          href='/senales/fotoluminiscentes/'
          />
        <HomeSection 
          title='Celtex - Acrílico'
          subtitle='Señal de seguridad para interiores y exteriores con soporte pvc celtex o acrílico variedad de espesores.'
          titleColor='cyan'
          img1='/assets/images/vinil-celtex-varios.webp'
          img2= '/assets/images/celtex-main.webp'
          reverse
          img3='/assets/images/senales-acrilico.webp'
          href='/senales/seguridad/'
          />
        <HomeSection 
          title='Decorativas'
          subtitle='Señales ornamentales que dan  un toque mas elegante al establecimiento, en aluminio, acero.'
          titleColor='blue'
          img1='/assets/images/acero-deco.webp'
          img2= '/assets/images/deco-main.webp'
          img3='/assets/images/aluminio-deco.webp'
          href='/senales/decorativas/aluminio'
          />

        <HomeSection 
          title='Envíos a nivel Nacional'
          subtitle='Reparto a domicilio en Lima y envíos por agencia a todo el Perú'
          titleColor='violet'
          img1='/assets/images/delivery.webp'
          img2= '/assets/images/envios-nacional.webp'
          img3='/assets/images/envios.webp'
          reverse
          />
</Layout>
