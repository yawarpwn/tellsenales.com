---
import slugify from 'slugify'
const { title } = Astro.props
---

<div class="relative h-24 md:h-32 flex items-center justify-center overflow-hidden mb-4">
	<div class="absolute inset-0">
		<div class="shadow-image"></div>
		<img
			class="w-full h-full object-cover"
			src={`/assets/images/${slugify(title, { lower: true })}.webp`}
			alt={title}
		/>
	</div>
	<h1 class="text-2xl md:text-3xl text-center font-extrabold z-[1] text-white uppercase page-title">
		{title}
	</h1>
</div>
<style>
	.page-title {
		text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.8), 5px 5px 25px rgba(0, 0, 0, 0.5);
	}

	.shadow-image {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		/* background: var(--theme-gradient); */
		background: black;
		width: 100%;
		height: 100%;
		opacity: 0.5;
	}
</style>
