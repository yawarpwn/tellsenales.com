---
import { getdiscountPorcent } from '@utils/maths'
interface Img {
  url: string
  title: string
}

interface Sys {
  id: string
}
export interface Props {
  slug: string
  name: string
  marca: string
  price: number
  sku: string | null
  offert: number | null
  img1: Img
  sys: Sys
}

const { product } = Astro.props
const { name, sku, price, offert, img1, slug, marca, img, code } = product
const Component = slug ? 'a' : 'div'
---

<Component href={`/seguridad/${slug}`}>
  <div class="product-card shadow-md rounded-md transition-all">
    <div class="relative h-0 w-full pb-[100%]">
      <img
        class="absolute inset-0 max-h-[155px] m-auto max-w-[85%]"
        alt={name}
        src={img ? img.url : img1.url}
      />
    </div>
    <div class="product-card__body p-2">
{code ? (
      <span class="font-bold text-xs uppercase">CÃ³digo: {code}</span>
): (
      <span class="font-bold text-xs uppercase">{marca || sku}</span>
)}
      <div class="min-h-[50px]">
        <p class="text-xs">{name}</p>
      </div>
      {
        offert ? (
          <div class="min-h-[50px]">
            <div>
              <span class="text-zinc-400 line-through">S/.{price}.00</span>
              <span class="ml-2">-{getdiscountPorcent(price, offert)}%</span>
            </div>
            <div></div>
            <div>
              <span class="font-bold text-red-500">S/. {offert}.00</span>
            </div>
          </div>
        ) : (
          <div class={`min-h-[50px] ${code && 'hidden'}`}>
            <div>
              <span class="font-bold text-red-500">S/. {price}.00</span>
            </div>
          </div>
        )
      }
    </div>
  </div>
</Component>
<style></style>
