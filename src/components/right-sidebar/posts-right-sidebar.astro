---
import TableOfContents from './table-of-contents'
const { headings } = Astro.props
---

<nav aria-label="rightSidebar.a11yTitle">
	{
		headings && (
			<TableOfContents client:media="(min-width: 50em)" headings={headings} isMobile={false} />
		)
	}
</nav>

<style>
	nav {
		width: 100%;
		padding: var(--doc-padding-block) 0;
		overflow: auto;
		font-size: var(--theme-text-xs);
	}

	/* style applied only on Firefox, this avoids scrollbars overlapping. */
	@supports (-moz-appearance: none) {
		.sidebar-nav {
			padding-inline-end: 1.5rem;
		}
	}
</style>
