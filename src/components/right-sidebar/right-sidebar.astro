---
const data = [
  {
    name: 'Fotoluminiscentes',
    image: '/assets/images/foto-incendio.webp',
    href: '/senales/fotoluminiscentes'
  },
  {
    name: 'Decorativas',
    image: '/assets/images/aluminio.webp',
    href: '/senales/decorativas'
  },
  {
    name: 'Vias y Calles',
    image: '/assets/images/preventivas.webp',
    href: '/senales/viales'
  },
  {
    name: 'Obras y Construcción',
    image: '/assets/images/obras-preventivas.webp',
    href: '/senales/obras'
  },
  {
    name: 'Protección Vial',
    image: '/assets/images/proteccion-vial.webp',
    href: '/seguridad/proteccion-vial'
  },
  {
    name: 'Cintas Seguridad',
    image: '/assets/images/cintas-seguridad.webp',
    href: '/seguridad/cintas-seguridad'
  },
  {
    name: 'Lucha contra incendio',
    image: '/assets/images/cintas-seguridad.webp',
    href: '/seguridad/cintas-seguridad'
  },
  {
    name: 'Ropa Seguridad',
    image: '/assets/images/ropa-seguridad.webp',
    href: '/seguridad/ropa-seguridad'
  }
]
---
<div class="fixed top-[68px] w-full pb-[300px] overflow-y-scroll z-50">
  <div class="relative pl-4">
    <h4 class="text-lg font-semibold">Destacados:</h4>
    <ul class="p-2 space-y-1">
      {
        data.map((item) => (
          <li class="right-sidebar__item">
              <a href={item.href}>
                <h5 class="text-sm font-bold text-white">{item.name}</h5>
                <img
                  class="right-sidebar__img"
                  src={item.image}
                  alt={item.name}
                />
              </a>
          </li>
        ))
      }
    </ul>
  </div>
  <style>
    .right-sidebar__item {
      width: 15rem;
      height: 40px;
      padding: 0.5rem;
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      border-radius: 0.2rem;
      cursor: pointer;
    }



    .right-sidebar__item:hover img {
      transform: scale(1.1);
      transition: all 0.5s ease;
    }

    .right-sidebar__item:after {
      content: '';
      width: 100%;
      height: 100%;
      position: absolute;
      background: black;
      opacity: 0.4;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: -2;
    }

    .right-sidebar__img {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      z-index: -3;
      object-fit: cover;
    }
  </style>
</div>
