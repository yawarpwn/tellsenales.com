---

export interface Props {
  previous: { text: string, link: string}
  next: {text: string, link: string}
  content: {title: string}
}

const { content, previous, next} = Astro.props
---
<article id="article" class="content">
  <section class="main-section">
    <slot />
  </section>
  {previous || next}
</article>
<style>
/* .content { */
/*   padding-top: 4rem; */
/*   padding-bottom: 4rem; */
/*   width: 100%; */
/*   margin-inline: auto; */
/* } */

	.content-title :global(.scope) {
		font-weight: 700;
		color: var(--theme-text-lighter);
	}
	.content {
		padding-top: calc(
			var(--theme-navbar-height)  + var(--doc-padding-block)
		);
		padding-bottom: var(--doc-padding-block);
		padding-inline: var(--min-spacing-inline);
		width: 100%;
		height: 100%;
		max-width: 80ch;
		margin-inline: auto;
		display: flex;
		flex-direction: column;
		overflow-x: hidden;
	}
	.content > section {
		margin-bottom: 4rem;
	}
	.next-previous-nav {
		display: flex;
		flex-wrap: wrap;
		width: auto;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}
	.mobile-toc {
		display: block;
		position: fixed;
		inset-inline: 0;
		top: calc(var(--theme-navbar-height));
		z-index: 2;
	}
	@media (min-width: 50em) {
		.mobile-toc {
			inset-inline-start: var(--theme-left-sidebar-width);
			margin-top: 0;
		}
	}
	@media (min-width: 72em) {
		.content {
			padding-top: calc(var(--theme-navbar-height) + var(--doc-padding-block));
		}
		.mobile-toc {
			display: none;
		}
	}


</style>


