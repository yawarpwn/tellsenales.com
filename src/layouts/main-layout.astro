---
import Head from '../components/head.astro'
import Navbar from './navbar'

const { title, description, image } = Astro.props

---
<!DOCTYPE html>
<html lang="en">
  <Head title={title} description={description} image={image} />
  <body>
    <Navbar client:visible />
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
main {
  min-height: 100vh;
}
</style>
